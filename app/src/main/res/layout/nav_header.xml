<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@color/theme_color_main"
    android:orientation="vertical"
    android:paddingRight="12dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <de.hdodenhof.circleimageview.CircleImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.25"
        android:layout_gravity="center"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:civ_border_width="3dp"
        app:civ_border_color="@color/White"
        android:id="@+id/navHeaderImg"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/grp21"/>

    <com.espy.mps.ui.customviews.CustomTextView
        app:layout_constraintTop_toBottomOf="@+id/navHeaderImg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/profileName"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/White"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:textSize="18dp"
        android:text=""
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <com.espy.mps.ui.customviews.CustomTextView
        app:layout_constraintTop_toBottomOf="@+id/profileName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="7dp"
        android:textSize="16dp"
        android:textColor="@color/OffWhite"
        android:layout_gravity="center"
        android:id="@+id/profileMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MPS Builders" />

</androidx.constraintlayout.widget.ConstraintLayout>
