<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        app:cardUseCompatPadding="true"
        android:backgroundTint="@color/White"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:paddingLeft="7dp"
            android:orientation="vertical"
            android:id="@+id/mainLay"
            android:background="@drawable/layout_click_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center|left"
                android:textColor="@color/Black"
                android:id="@+id/fid"
                android:text="Folloup Id: "
                android:padding="2dp"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="3dp"
                android:gravity="center|left"
                android:textColor="@color/Black"
                android:id="@+id/dateLead"
                android:text="Followup Date: "
                android:padding="2dp"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="3dp"
                android:gravity="center|left"
                android:textColor="@color/Black"
                android:id="@+id/timeLead"
                android:text="Followup Time: "
                android:padding="2dp"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="3dp"
                android:gravity="center|left"
                android:textColor="@color/Black"
                android:id="@+id/closingDateLead"
                android:text="Followup expected closing date: "
                android:padding="2dp"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="3dp"
                android:gravity="center|left"
                android:textColor="@color/Black"
                android:id="@+id/lid"
                android:text="Folloup Lead Id: "
                android:padding="2dp"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="3dp"
                android:gravity="center|left"
                android:textColor="@color/Black"
                android:id="@+id/comment"
                android:text="Remarks: "
                android:padding="2dp"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="3dp"
                android:gravity="center|left"
                android:textColor="@color/Black"
                android:id="@+id/cName"
                android:text="Customer Name: "
                android:padding="2dp"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="3dp"
                android:gravity="center|left"
                android:textColor="@color/Black"
                android:id="@+id/acttivity_type"
                android:text="Activity Type: "
                android:padding="2dp"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:id="@+id/vVertical1"
                android:background="@color/GreyDim"
                android:layout_width="match_parent"
                android:layout_marginTop="3dp"
                android:layout_height="1dp"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>